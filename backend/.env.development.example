# Development Environment Variables Template
# Copy this file to .env or .env.development and fill in your actual values

# Database Configuration (Development)
MONGO_URI=mongodb+srv://your-username:your-password@your-cluster.mongodb.net/url-shortner-dev?retryWrites=true&w=majority

# Application URLs (Local Development)
FRONTEND_URL=http://localhost:5173
APP_URI=http://localhost:3000/

# JWT Security (Development - can be simpler)
JWT_SECRET=development-jwt-secret-key-at-least-32-characters

# Environment
NODE_ENV=development

# Email Configuration (Development - can use test accounts)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-dev-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=your-dev-email@gmail.com

# Abstract API Email Validation
ABSTRACT_API_KEY=your-abstract-api-key-here

# Development specific settings
# DEBUG=true
# LOG_LEVEL=debug
